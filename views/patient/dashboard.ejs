<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Sahayata App Patient Portal</title>

    <!-- Custom fonts for this template-->
    <link href="/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="/sb-admin-2.min.css" rel="stylesheet">

</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

            <!-- Sidebar - Brand -->
            <a class="sidebar-brand d-flex align-items-center justify-content-center" href="./dashboard">
                <div class="sidebar-brand-text mx-3">Sahayata App Patient Portal</div>
            </a>

            <!-- Divider -->
            <hr class="sidebar-divider my-0">

            <!-- Nav Item - Dashboard -->
            <li class="nav-item active">
                <a class="nav-link" href="./dashboard">
                    <span>Dashboard</span></a>
            </li>

            <!-- Nav Item - Patient Details Menu -->
            <li class="nav-item active">
                <a class="nav-link" href="./details">
                    <span>Patient Details</span></a>
            </li>


            <!-- Nav Item - Bill Payment Menu -->
            <li class="nav-item active">
                <a class="nav-link" href="./payBill">
                    <span>Bill Payment</span></a>
            </li>

             <!-- Nav Item - Find Hospital Menu -->
             <li class="nav-item active">
                <a class="nav-link" href="./findHospital">
                    <span>Find Hospital</span></a>
            </li>
        </ul>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white static-top shadow">
                    <button type="submit" class="btn btn-danger ml-auto">Logout</button>
                </nav>
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <div class="d-sm-flex align-items-center justify-content-between my-4">
                        <h1 class="h3 mb-0 text-gray-800">Welcome to Dashboard of Patient <%= patient.name %></h1>
                    </div>
                    
                    <div class="col-md-12 bg-gray">
                    <div class="login d-flex align-items-center py-5">

                        <div class="container">
                            <div class="row">
                                <div class="col-lg-12 col-xl-12 mx-auto">
                                        <form class="row g-3" method="POST" action="/patients/dashboard/<%=patient.id%>/cnpl">
                                            <div class="col-md-6 my-2">
                                            <label for="inputName" class="form-label">Name</label>
                                            <input type="text" class="form-control" id="inputName" name="patient[name]" readonly value="<%= patient.name %>">
                                            </div>
                                            <div class="col-md-6 my-2">
                                                <label for="inputContact" class="form-label">Contact</label>
                                                <input type="text" class="form-control" id="inputContact" name="patient[contact]" readonly value="<%= patient.contact %>">
                                            </div>
                                            <div class="col-12 my-2">
                                            <label for="inputAddress" class="form-label">Email</label>
                                            <input type="email" class="form-control" id="inputAddress" name="patient[email]" readonly value="<%= patient.email %>">
                                            </div>
                                            <div class="col-md-6 my-2">
                                            <label for="inputState" class="form-label">Age</label>
                                            <input type="text" class="form-control" id="inputState" name="patient[age]">
                                            </div>
                                            <div class="col-md-6 my-2">
                                                <label for="inputgender" class="form-label">Gender</label>
                                                <select class="form-select" name="patient[sex_male]">
                                                    <option selected>Select</option>
                                                    <option value="1">Male</option>
                                                    <option value="0">Female</option>
                                                </select>
                                            </div>
                                            <div class="col-md-6 my-2">
                                                <label for="inputBMI" class="form-label">BMI</label>
                                                <input type="text" class="form-control" id="inputBMI" name="patient[bmi]">
                                            </div>
                                            <div class="col-md-6 my-2">
                                                <label for="inputSmoker" class="form-label">Smoker?</label>
                                                <select class="form-select" name="patient[smoker_yes]">
                                                    <option selected>Select</option>
                                                    <option value="1">Yes</option>
                                                    <option value="0">No</option>
                                                </select>
                                            </div>
                                            <div class="col-md-12 my-2">
                                                <label for="inputRegion" class="form-label">Region</label>
                                                <select class="form-select" name="patient[region]">
                                                    <option selected>Select</option>
                                                    <option value="northwest">Northwest</option>
                                                    <option value="northeast">Northeast</option>
                                                    <option value="southwest">Southwest</option>
                                                    <option value="southeast">Southeast</option>
                                                </select>
                                            </div>
                                            <div class="col-md-12 my-2">
                                                <label for="inputState" class="form-label">Children</label>
                                                <input type="text" class="form-control" id="inputState" name="patient[children]">
                                            </div>
                                            <div class="col-12 my-2">
                                            <button type="submit" class="btn btn-primary">Register for CNPL</button>
                                            </div>
                                        </form>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Patients details</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

            </div>
            <!-- End of Content Wrapper -->

    </div>
<!-- End of Page Wrapper -->

</body>

</html>